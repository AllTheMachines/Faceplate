{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/gsd-check-update.js"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "curl -d \"Claude [$(basename \"$PWD\")]: Task Finished\" ntfy.sh/physicalmachinefinsinishedtask",
            "async": true
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "curl -d \"Claude [$(basename \"$PWD\")]: Input Required\" ntfy.sh/physicalmachinefinsinishedtask",
            "async": true
          }
        ]
      }
    ]
  },
  "statusLine": {
  "type": "command",
  "command": "input=$(cat); used=$(echo \"$input\" | jq -r '.context_window.used_percentage // 0'); echo \"Context: $used%\""
  }
}